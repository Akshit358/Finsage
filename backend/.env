# FinSage Application Configuration Template
# Copy this file to .env and update with your actual values

APP_NAME=FinSage
DEBUG=True
VERSION=1.0.0

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# ML Model Configuration
ML_MODEL_PATH=./models/fin_predictor.pkl

# Blockchain Configuration (Optional - leave empty for testing)
BLOCKCHAIN_RPC_URL=
PRIVATE_KEY=
CONTRACT_ADDRESS=

# Database Configuration (for future use)
DATABASE_URL=

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production-please
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External API Configuration (for future use)
ALPACA_API_KEY=
ALPACA_SECRET_KEY=

# Redis Configuration (for future use)
REDIS_URL=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/finsage.log
