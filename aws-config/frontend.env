# FinSage Frontend Environment Variables for AWS
# These variables should be set during the build process

# API Configuration
REACT_APP_API_BASE_URL=https://YOUR_ALB_DNS_NAME
REACT_APP_API_VERSION=v1
REACT_APP_API_TIMEOUT=30000

# Application Configuration
REACT_APP_NAME=FinSage
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=production

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_DEBUG=false
REACT_APP_ENABLE_MOCK_DATA=false

# External Services
REACT_APP_ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
REACT_APP_FINNHUB_API_KEY=your-finnhub-key
REACT_APP_POLYGON_API_KEY=your-polygon-key

# UI Configuration
REACT_APP_THEME=dark
REACT_APP_DEFAULT_CURRENCY=USD
REACT_APP_DEFAULT_LANGUAGE=en

# Monitoring
REACT_APP_SENTRY_DSN=your-sentry-dsn
REACT_APP_GOOGLE_ANALYTICS_ID=your-ga-id

# WebSocket Configuration (if using)
REACT_APP_WS_URL=wss://YOUR_ALB_DNS_NAME/ws

# File Upload
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Authentication
REACT_APP_JWT_STORAGE_KEY=finsage_token
REACT_APP_REFRESH_TOKEN_KEY=finsage_refresh_token

# Pagination
REACT_APP_DEFAULT_PAGE_SIZE=20
REACT_APP_MAX_PAGE_SIZE=100

# Real-time Updates
REACT_APP_UPDATE_INTERVAL=5000
REACT_APP_WS_RECONNECT_INTERVAL=3000

# Error Handling
REACT_APP_ERROR_BOUNDARY_ENABLED=true
REACT_APP_RETRY_ATTEMPTS=3

# Performance
REACT_APP_LAZY_LOADING_ENABLED=true
REACT_APP_IMAGE_OPTIMIZATION_ENABLED=true

