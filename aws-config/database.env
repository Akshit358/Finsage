# FinSage Database Configuration for AWS RDS
# Update these values with your actual RDS connection details

# Database Connection
DB_HOST=YOUR_RDS_ENDPOINT
DB_PORT=5432
DB_NAME=finsage
DB_USER=finsage
DB_PASSWORD=YOUR_DATABASE_PASSWORD

# Connection Pool Configuration
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Database Options
DB_ECHO=false
DB_POOL_PRE_PING=true
DB_POOL_RESET_ON_RETURN=rollback

# SSL Configuration
DB_SSL_MODE=require
DB_SSL_CERT_PATH=/path/to/cert.pem
DB_SSL_KEY_PATH=/path/to/key.pem
DB_SSL_ROOT_CERT_PATH=/path/to/root-cert.pem

# Backup Configuration
DB_BACKUP_RETENTION_DAYS=7
DB_BACKUP_WINDOW=03:00-04:00
DB_MAINTENANCE_WINDOW=sun:04:00-sun:05:00

# Performance Configuration
DB_STATEMENT_TIMEOUT=30000
DB_IDLE_IN_TRANSACTION_SESSION_TIMEOUT=60000
DB_LOCK_TIMEOUT=10000

# Monitoring
DB_ENABLE_QUERY_LOGGING=false
DB_SLOW_QUERY_THRESHOLD=1000
DB_CONNECTION_MONITORING=true

# Migration Configuration
DB_MIGRATION_PATH=/app/migrations
DB_MIGRATION_TABLE=alembic_version
DB_AUTO_MIGRATE=false

# Connection String (for reference)
# postgresql://finsage:YOUR_PASSWORD@YOUR_RDS_ENDPOINT:5432/finsage?sslmode=require

