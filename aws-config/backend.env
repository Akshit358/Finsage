# FinSage Backend Environment Variables for AWS
# Copy this file to your EC2 instance and source it

# Application Configuration
PORT=8000
HOST=0.0.0.0
ENVIRONMENT=production
DEBUG=false

# Database Configuration (Update with your RDS details)
# Get these values from aws-config/database-connection.txt
DATABASE_URL=postgresql://finsage:YOUR_PASSWORD@YOUR_RDS_ENDPOINT:5432/finsage
DB_HOST=YOUR_RDS_ENDPOINT
DB_PORT=5432
DB_NAME=finsage
DB_USER=finsage
DB_PASSWORD=YOUR_PASSWORD

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=YOUR_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_SECRET_KEY

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security Configuration
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
CORS_ORIGINS=https://YOUR_CLOUDFRONT_DOMAIN

# Monitoring Configuration
ENABLE_METRICS=true
CLOUDWATCH_LOG_GROUP=/aws/ec2/finsage-backend

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=FinSage
PROJECT_VERSION=1.0.0

# External APIs (if needed)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
FINNHUB_API_KEY=your-finnhub-key
POLYGON_API_KEY=your-polygon-key

# Redis Configuration (if using)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Email Configuration (if using)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_FOLDER=/tmp/uploads

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

