DB_HOST=finsage-db.cluster-xyz.us-east-1.rds.amazonaws.com
DB_PORT=5432
DB_NAME=finsage
DB_USER=finsage_admin
DB_PASSWORD=FinSage2024!

# Redis Configuration (for caching)
REDIS_URL=redis://finsage-redis.xyz.cache.amazonaws.com:6379
REDIS_HOST=finsage-redis.xyz.cache.amazonaws.com
REDIS_PORT=6379

# API Keys - Replace with your actual keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key-here
FINNHUB_API_KEY=your-finnhub-key-here
TWELVE_DATA_API_KEY=your-twelve-data-key-here
NEWS_API_KEY=your-news-api-key-here

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Application Configuration
NODE_ENV=production
PORT=8000
FRONTEND_URL=https://finsage-enterprise.com
BACKEND_URL=https://api.finsage-enterprise.com

# CORS Configuration
CORS_ORIGINS=https://finsage-enterprise.com,https://www.finsage-enterprise.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key-here
FROM_EMAIL=noreply@finsage-enterprise.com
FROM_NAME=FinSage Enterprise

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=finsage-enterprise-assets
CLOUDFRONT_DISTRIBUTION_ID=your-cloudfront-distribution-id

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-here
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here
ENCRYPTION_KEY=your-encryption-key-here

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_REAL_TIME_DATA=true
ENABLE_PAPER_TRADING=true
ENABLE_OPTIONS_TRADING=true
ENABLE_BLOCKCHAIN_FEATURES=true

# Trading Configuration
DEFAULT_PAPER_TRADING_BALANCE=100000
MAX_POSITION_SIZE=10000
MIN_ORDER_SIZE=1
COMMISSION_RATE=0.001

# Risk Management
MAX_PORTFOLIO_RISK=0.15
VAR_CONFIDENCE_LEVEL=0.95
STRESS_TEST_SCENARIOS=10

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# WebSocket Configuration
WS_PORT=8080
WS_HEARTBEAT_INTERVAL=30000

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_MS=30000
CONNECTION_POOL_SIZE=20

# Development/Testing
ENABLE_DEBUG_MODE=false
ENABLE_MOCK_DATA=false
ENABLE_API_DOCS=true

# Compliance and Security
ENABLE_AUDIT_LOGGING=true
ENABLE_DATA_ENCRYPTION=true
ENABLE_TWO_FACTOR_AUTH=true
ENABLE_RATE_LIMITING=true

# Third-party Integrations
ENABLE_STRIPE_PAYMENTS=false
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

ENABLE_SLACK_NOTIFICATIONS=false
SLACK_WEBHOOK_URL=your-slack-webhook-url

ENABLE_DISCORD_NOTIFICATIONS=false
DISCORD_WEBHOOK_URL=your-discord-webhook-url

# Analytics Configuration
GOOGLE_ANALYTICS_ID=your-ga-id
MIXPANEL_TOKEN=your-mixpanel-token
AMPLITUDE_API_KEY=your-amplitude-key

# CDN Configuration
CDN_BASE_URL=https://cdn.finsage-enterprise.com
CDN_CACHE_TTL=31536000

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_ACQUIRE_TIMEOUT=60000

# Redis Pool Configuration
REDIS_POOL_MIN=2
REDIS_POOL_MAX=10
REDIS_POOL_IDLE_TIMEOUT=30000

# Application Limits
MAX_PORTFOLIOS_PER_USER=10
MAX_WATCHLISTS_PER_USER=5
MAX_ALERTS_PER_USER=20
MAX_API_REQUESTS_PER_MINUTE=60

# Trading Hours Configuration
MARKET_OPEN_HOUR=9
MARKET_OPEN_MINUTE=30
MARKET_CLOSE_HOUR=16
MARKET_CLOSE_MINUTE=0
MARKET_TIMEZONE=America/New_York

# Notification Configuration
EMAIL_NOTIFICATIONS_ENABLED=true
PUSH_NOTIFICATIONS_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=false

# Data Retention
USER_DATA_RETENTION_DAYS=2555
TRADING_DATA_RETENTION_DAYS=365
LOG_RETENTION_DAYS=90
BACKUP_RETENTION_DAYS=30

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1
SLOW_QUERY_THRESHOLD_MS=1000

# Error Handling
ENABLE_ERROR_REPORTING=true
ERROR_REPORTING_SAMPLE_RATE=1.0
MAX_ERROR_REPORTS_PER_HOUR=100

# API Versioning
API_VERSION=v1
API_DEPRECATION_NOTICE_DAYS=90

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System maintenance in progress. Please try again later.

# Health Check Configuration
HEALTH_CHECK_INTERVAL_SECONDS=30
HEALTH_CHECK_TIMEOUT_SECONDS=5
HEALTH_CHECK_RETRIES=3

# Load Balancer Configuration
LB_HEALTH_CHECK_PATH=/health
LB_HEALTH_CHECK_INTERVAL=30
LB_HEALTH_CHECK_TIMEOUT=5
LB_HEALTH_CHECK_THRESHOLD=2

# Auto-scaling Configuration
MIN_INSTANCES=2
MAX_INSTANCES=10
SCALE_UP_THRESHOLD=70
SCALE_DOWN_THRESHOLD=30
SCALE_UP_COOLDOWN=300
SCALE_DOWN_COOLDOWN=300

# Disaster Recovery
DR_ENABLED=true
DR_REGION=us-west-2
DR_RTO_MINUTES=60
DR_RPO_MINUTES=15

# Compliance
GDPR_COMPLIANCE=true
CCPA_COMPLIANCE=true
SOC2_COMPLIANCE=true
PCI_COMPLIANCE=false

# Data Privacy
DATA_ENCRYPTION_AT_REST=true
DATA_ENCRYPTION_IN_TRANSIT=true
PII_MASKING_ENABLED=true
AUDIT_TRAIL_ENABLED=true
